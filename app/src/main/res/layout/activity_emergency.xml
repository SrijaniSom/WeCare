<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCE4FD">


<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter emergency number"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/colorTotalConfirmed"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="number"
        android:id="@+id/numberEmergencyEditText"
        android:padding="12dp"
        android:layout_margin="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/call"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Call Emergency"
            android:fontFamily="@font/poppins_bold"
            android:padding="30dp"
            android:textSize="20dp"

            android:id="@+id/callbtn"
            android:textColor="@color/colorTotalConfirmed"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/loc"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Share Emergency Location"
            android:fontFamily="@font/poppins_bold"
            android:padding="30dp"
            android:textSize="20dp"
            android:textColor="#CB4335"
            android:id="@+id/locationBtn"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/msg"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:hint="Type emergency message"
            android:id="@+id/EmergencyMessageText"
            android:layout_weight="3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="send"
            android:padding="10dp"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_bold"

            android:layout_weight="1"
            android:id="@+id/msgBtn"
            android:textColor="@color/colorTotalConfirmed"/>

    </LinearLayout>
</LinearLayout>

</ScrollView>